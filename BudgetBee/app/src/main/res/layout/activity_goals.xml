<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Monthly Spending Goals"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textMinGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Goal: R 0.00"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textMaxGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Goal: R 0.00"
        android:textSize="20sp"
        android:layout_marginBottom="32dp" />

    <!-- ✅ NEW: Total spent -->
    <TextView
        android:id="@+id/textSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Spent: R 0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- ✅ NEW: ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="0"
        android:max="100"
        android:progressTint="@android:color/holo_green_dark"
        android:layout_marginBottom="8dp" />

    <!-- ✅ NEW: Percent text -->
    <TextView
        android:id="@+id/textProgressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0% of max goal used"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonEditGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Goals" />
</LinearLayout>
